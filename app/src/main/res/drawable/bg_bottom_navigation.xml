<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shape Rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna latar belakang -->
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/> <!-- Jari-jari sudut -->
        </shape>
    </item>
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#00000000"
                android:startColor="#0D000000"
            android:type="linear" />
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
        </shape>
    </item>
</layer-list>